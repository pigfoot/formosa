	strcpy(bbsmail_box, "/var/spool/mail/bbs");
	if (stat(bbsmail_box, &st) != 0 || st.st_size == 0)
	{
		strcpy(bbsmail_box, "/var/mail/bbs");	
		if (stat(bbsmail_box, &st) != 0 || st.st_size == 0)
		{
			/* bbs mail spool is empty */
			exit(0);
		}
	}
