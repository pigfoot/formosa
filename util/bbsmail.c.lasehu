	if (chdir(HOMEBBS) == -1)
	{
		/* home not exist */
		exit(0);
	}

	now = time(0);
	sprintf(spool_tmp, "tmp/_bbsmail.%d", (int)now);
#ifndef TEST	
	if (myrename(bbsmail_box, spool_tmp) == -1)
	{
		printf("cannot rename: from %s to %s\n", bbsmail_box, spool_tmp);
		exit(1);
	}
#endif	

	chown(spool_tmp, BBS_UID, BBS_GID);

	init_bbsenv();

#ifdef TEST
	fp_sys = stdin;
#else	
	if ((fp_sys = fopen(spool_tmp, "r")) == NULL)
		return -1;
#endif		

	i = 0;

	for (;;) 
	{
		while (mygets(rbuf, sizeof(rbuf), fp_sys))
		{
			if (!strncasecmp(rbuf, "From ", 5))
				break;
		}
		if (strncasecmp(rbuf, "From ", 5))	/* cannot find 'From ' */
			return -1;

		fseek(fp_sys, -strlen(rbuf), SEEK_CUR);
	
		memset(&minfo, 0, sizeof(minfo));
		
		next_arg(rbuf, minfo.from, sizeof(minfo.from), GET_NEXTONE);

		sprintf(fn_spam, "log/spam.%d.%d", time(0), i);		
		get_header(fp_sys, fn_spam, minfo.to, minfo.subject);

		if ((s = strstr(minfo.to, ".bbs")) != NULL)
		{
			*s = '\0';
			if (minfo.to[0] != '\0')
				ok_num = 5;
			minfo.type = 'm';				
		}
		else if (!strcmp(minfo.to, "bbs"))
		{
			minfo.to[0] = '\0';		
#ifdef IDENT			
			if (!strncmp(minfo.subject, "[syscheck]", 10))
			{
				minfo.type = 'c';
			}
			else
#endif			
			minfo.type = 'p';
		}
		else if (minfo.to[0] != '\0')
		{
			ok_num = -1;
			log_bbsmail("ERROR: from=<%s>, to=<%s>", minfo.from, outside);
		}
		else
		{
			ok_num = -1;
			log_bbsmail("ERROR: from=<%s>, to=<>", minfo.from);		
		}
	
		sprintf(w_file, "%s-%d", spool_tmp, ++i);		
		if (get_body(w_file, fp_sys, ok_num) != -1)
			access_mail(w_file);					
		unlink(w_file);			
		
#if 1
		if (!is_spam)
			unlink(fn_spam);
		is_spam = 0;
#endif				
	}
#ifdef TEST
#else
	fclose(fp_sys);
#endif	

	unlink(spool_tmp);
	return 0;
